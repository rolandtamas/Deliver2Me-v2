<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.dashboard.DashboardFragment"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myads"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:gravity="start">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNewEntryFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/black"
            android:src="@drawable/ic_baseline_add_24"
            app:fabSize="normal"
            android:contentDescription="Adauga un nou anunt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/addNewEntryFab"
            android:layout_marginStart="64dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:text="Adaugă un nou anunț" />

    </RelativeLayout>


</LinearLayout>